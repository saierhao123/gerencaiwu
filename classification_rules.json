{
  "version": "2.1",
  "simple_rules": {
    "支出": {
      "餐饮": ["餐厅", "外卖", "咖啡", "奶茶", "胡辣汤", "果源", "馒头", "炒货"],
      "交通": ["打车", "公交", "地铁", "共享单车", "加油"],
      "购物": ["淘宝", "天猫", "拼多多", "京东", "购物"],
      "生活日用": ["便利店", "超市", "百货", "售水站", "日用", "生活"],
      "医疗健康": ["医院", "药店", "诊所"],
      "娱乐休闲": ["电影", "游戏", "KTV"],
      "旅行度假": ["机票", "酒店", "景点"],
      "人情往来": ["红包", "转账", "AA", "还款"]
    },
    "收入": {
      "工资收入": ["工资", "薪水", "薪资"],
      "奖金补贴": ["奖金", "补贴", "年终奖"],
      "投资理财": ["理财收益", "基金分红", "利息"],
      "其他收入": ["退款", "报销"]
    },
    "非收支": {
      "互转": ["余额宝-自动转入", "余额宝-自动转出", "银行卡转入余额宝", "余额宝转出至银行卡", "余额转入余额宝", "零钱通转入"],
      "理财操作": ["理财购买", "基金赎回", "股票交易"],
      "信用支付": ["花呗", "借呗", "信用支付"],
      "资金调整": ["充值", "提现", "退款"]
    }
  },
  "advanced_rules": {
    "支出": {
      "大额餐饮": {
        "rules": [
          {
            "keyword": "餐厅",
            "amount_range": [200, 5000],
            "exclude": ["员工餐厅", "食堂"],
            "memo": "商务宴请"
          }
        ],
        "alert": "消费超过300元需确认"
      },
      "高频咖啡": {
        "rules": [
          {
            "regex": "星巴克|瑞幸|库迪",
            "amount_range": [10, 40],
            "max_daily": 2
          }
        ]
      }
    }
  },
  "system_settings": {
    "default_folder": "zhangdang",
    "default_categories": {
      "支出": "生活日用",
      "收入": "其他收入",
      "非收支": "互转"
    },
    "alerts": {
      "large_expense": {
        "threshold": 1000,
        "message": "大额消费请确认"
      }
    },
    "chart_styles": {
      "colors": ["#FF6B6B", "#4ECDC4", "#45B7D1", "#96CEB4", "#FFEAA7", "#DDA0DD", "#98D8C8", "#F7DC6F"],
      "font": {
        "family": "SimHei",
        "size": 12
      }
    }
  }
}